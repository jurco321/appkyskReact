{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "jsx": "react",
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "*": ["types/*"]
    },
    "lib": ["dom", "es6", "es2015", "es2017", "esnext.asynciterable"],
    "allowSyntheticDefaultImports": true
  },
  "include": ["src", "src/components"]
}